<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="lich">
        <createSequence incrementBy="1" sequenceName="base_seq" startValue="1"/>
    </changeSet>
    <changeSet id="2" author="lich">
        <createTable tableName="order_products">
            <column name="order_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="product" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="lich">
        <createTable tableName="orders">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_orders"/>
            </column>
            <column name="time_created" type="DATETIME"/>
            <column name="time_updated" type="DATETIME"/>
            <column name="user_id" type="BIGINT"/>
            <column name="sum" type="INT"/>
            <column name="status" type="SMALLINT"/>
        </createTable>
    </changeSet>
    <changeSet id="4" author="lich">
        <createTable tableName="users">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_users"/>
            </column>
            <column name="time_created" type="DATETIME"/>
            <column name="time_updated" type="DATETIME"/>
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="last_name" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="5" author="lich">
        <addUniqueConstraint columnNames="email" constraintName="uc_users_email" tableName="users"/>
    </changeSet>
    <changeSet id="6" author="lich">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="orders" constraintName="FK_ORDERS_ON_USER"
                                 referencedColumnNames="id" referencedTableName="users"/>
    </changeSet>
    <changeSet id="7" author="lich">
        <addForeignKeyConstraint baseColumnNames="order_id" baseTableName="order_products"
                                 constraintName="fk_order_products_on_order" referencedColumnNames="id"
                                 referencedTableName="orders"/>
    </changeSet>

    <changeSet id="8" author="lich">
        <sql>
            INSERT INTO users (id, time_created, time_updated, first_name, last_name, email, password) VALUES
                 (1, '2024-07-23 10:53:14.492159', '2024-07-23 10:53:14.492159', 'Jane', 'Doe', 'jane.doe@example.com', 'securePassword123'),
                 (2, '2024-07-23 10:53:28.31449', '2024-07-23 10:53:28.314995', 'John', 'Doe', 'john.doe@example.com', 'securePassword123');
        </sql>
    </changeSet>

    <changeSet id="9" author="lich">
        <sql>
            INSERT INTO orders (id, time_created, time_updated, user_id, sum, status) VALUES
                (3, '2024-07-23 10:53:40.475375', '2024-07-23 10:53:40.475375', 1, 1900, 2);
        </sql>
    </changeSet>

    <changeSet id="10" author="lich">
        <sql>
            INSERT INTO order_products (order_id, product) VALUES
                (3, 'Iphone'),
                (3, 'Vacuum cleaner'),
                (3, 'Fan');
        </sql>
    </changeSet>

</databaseChangeLog>